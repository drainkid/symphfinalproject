{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <h1>Авторы</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ author.name }}</td>
            </tr>
            <tr>
                {% if author.articleId.count ==1 %}
                    <th>Article</th>
                {% else %}
                    <th>Article</th>
                {% endif %}
                <td>{% for article in author.articleId %}
                        {% if article == author.articleId[author.articleId.count-1] %}
                            {{ article }}
                        {% else %}
                            {{ article }},
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_author_index') }}">back to list</a>

    <a href="{{ path('app_author_edit', {'id': author.id}) }}">edit</a>

    {{ include('author/_delete_form.html.twig') }}
{% endblock %}
