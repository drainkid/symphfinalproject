{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Произведения</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ article.genreId }}</td>
            </tr>
            <tr>
                {% if article.authorId.count ==1 %}
                    <th>Автор</th>
                {% else %}
                    <th>Авторы</th>
                {% endif %}
                <td>{% for author in article.authorId %}
                        {% if author == article.authorId[article.authorId.count-1] %}
                            {{ author }}
                        {% else %}
                            {{ author }},
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}">back to list</a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
